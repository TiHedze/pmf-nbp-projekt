@using Pmf.PublicationTracker.Presentation.Api.Internal.ViewModels;
@model AuthorDetailsViewModel

<div class="card">
    <div class="card-header">
        <h3>@Model.Author.FirstName @Model.Author.LastName</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        Title
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var publication in Model.Publications)
                {
                    <tr>
                        <td>
                            @publication.Title
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
