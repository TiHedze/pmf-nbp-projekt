@using Pmf.PublicationTracker.Presentation.Api.Internal.ViewModels;
@model AuthorDetailsViewModel

<div class="card">
    <div class="card-header">
        <h3>@Model.Author.FirstName @Model.Author.LastName</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        Title
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var publication in Model.Publications)
                {
                    <tr>
                        <td>
                            <a asp-controller="Publication" asp-action="Details" asp-route-id=@publication.Id >@publication.Title</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        Related authors
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var relatedAuthor in Model.RelatedAuthors)
                {
                    <tr>
                        <td>
                            <a asp-controller="Author" asp-action="Details" asp-route-id=@relatedAuthor.Id>@relatedAuthor.FirstName @relatedAuthor.LastName</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
